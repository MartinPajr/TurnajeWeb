@using Turnaje.Database.Entity
@{
    ViewData["Title"] = "Home Page";
}


<style>
    .btn-custom {
        width: 200px; /* Fixed width for all buttons */
    }
</style>

<body>
    <div class="container mt-4">
        <h2 class="text-center" style="color:#00FFFF">My Organizing Administration</h2>
        <div class="row">
            <div class="col-12">
                @foreach (Turnaj turnaj in Model)
                {
                    <a asp-controller="Home" asp-action="TournamentSettings" asp-route-id="@turnaj.Id" class="card-link">
                        <div class="tournament-card">
                            <div class="row">
                                <!-- Left Column for Name, Game, Description -->
                            <div class="col-md-6">
                                    <h3 class="tournament-name">@turnaj.Name</h3> 
                                    <p class="game-name"><i class="bi bi-controller"></i> @turnaj.Game</p>
                                    <p style=" overflow: hidden; text-overflow: ellipsis; line-height: 1.2em; max-height: 2.4em;" class="description"><i class="bi bi-card-list"></i> @turnaj.Description</p>
                                </div>
                                <!-- Right Column for Time Info and Registered Players -->
                            <div class="col-md-6 text-cyberpunk-right">
                                    <p class="start-time"><i class="bi bi-calendar-fill"></i> @turnaj.Start</p>
                                    <p class="registered-players"><i class="bi bi-check-circle"></i> @turnaj.PocetHracu</p>
                                    <p class="check-in"><i class="bi bi-check-circle-fill"></i> @turnaj.CheckStart </p>
                                </div>
                            </div>

                        </div>
                    </a>

                }

            </div>
            <!-- More cards can be added here -->
        </div>
    </div>

    <script src="https://code.jquery.com/jquery-3.5.1.slim.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js"></script>

</body>